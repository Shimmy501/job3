<html>
<style type="text/css">
h1
{
  text-transform: uppercase;
  text-align: left;
  letter-spacing: 0.3em;
  word-spacing: 1em;
  margin: 1.5em 1em;
}
</style>

<h1> find a job & start a currer </h1>

<div class="pull-right">
  <%= link_to("Add a job", new_job_path, :class=>"btn btn-default" )%>
</div>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
    <td> <%= link_to(job.title, job_path(job) )%></td>
    <td> <%= link_to(job.description, job_path(job))%></td>

    <td>
      <%= link_to("Edit", edit_job_path(job))%>
      <%= link_to("Delete", job_path(job), :method => :delete, :data => {:confirm => "Are You Sure?"})%>
    </td>

    <td> <%= job.created_at %> </td>
  </tr>
  <% end %>
</table>

</html>
